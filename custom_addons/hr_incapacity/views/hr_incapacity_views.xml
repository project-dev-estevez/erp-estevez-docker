<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tipos de Incapacidad - Vista Lista -->
    <record id="view_hr_incapacity_type_list" model="ir.ui.view">
        <field name="name">hr.incapacity.type.list</field>
        <field name="model">hr.incapacity.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_hr_incapacity_type_form" model="ir.ui.view">
        <field name="name">hr.incapacity.type.form</field>
        <field name="model">hr.incapacity.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Incapacidades - Vista Lista -->
    <record id="view_hr_incapacity_list" model="ir.ui.view">
        <field name="name">hr.incapacity.list</field>
        <field name="model">hr.incapacity</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Folio"/>
                <field name="employee_id" string="Empleado"/>
                <field name="incapacity_type_id" string="Tipo"/>
                <field name="incident_date" string="Fecha Incidente"/>
                <field name="start_date" string="Fecha Inicio"/>
                <field name="end_date" string="Fecha Fin"/>
                <field name="days" string="DÃ­as"/>
                <field name="state" string="Estado"/>
            </list>
        </field>
    </record>

    <record id="view_hr_incapacity_form" model="ir.ui.view">
        <field name="name">hr.incapacity.form</field>
        <field name="model">hr.incapacity</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_validate" string="Validar" type="object" class="btn-secondary" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Marcar como Realizada" type="object" class="btn-secondary" invisible="state != 'validated'"/>
                    <button name="action_cancel" string="Cancelar" type="object" class="btn-danger" invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_draft" string="Volver a Borrador" type="object" class="btn-secondary" invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="incapacity_type_id"/>
                            <field name="incident_date"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="days" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="comments"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_hr_incapacity" model="ir.actions.act_window">
        <field name="name">Incapacidades</field>
        <field name="res_model">hr.incapacity</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_hr_incapacity_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_hr_incapacity_form')})]"/>
    </record>

    <record id="action_hr_incapacity_type" model="ir.actions.act_window">
        <field name="name">Tipos de Incapacidad</field>
        <field name="res_model">hr.incapacity.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_hr_incapacity_type_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_hr_incapacity_type_form')})]"/>
    </record>
</odoo>