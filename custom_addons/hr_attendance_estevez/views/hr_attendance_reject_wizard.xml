<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_attendance_reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.reject.wizard.form</field>
        <field name="model">hr.attendance.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Rechazar asistencia">
                <group>
                    <field name="observation" placeholder="Motivo del rechazo"/>
                </group>
                <footer>
                    <button name="action_confirm_reject" string="Confirmar rechazo" type="object" class="btn btn-danger"/>
                    <button string="Cancelar" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
