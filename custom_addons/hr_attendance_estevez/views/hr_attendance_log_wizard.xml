<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_attendance_log_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.log.wizard.form</field>
        <field name="model">hr.attendance.log.wizard</field>
        <field name="arch" type="xml">
            <form string="Historial de mensajes">
                <field name="attendance_id" invisible="1"/>

                <!-- Sección para agregar nuevo mensaje -->
                <group string="Agregar Nuevo Mensaje">
                    <field name="new_message" placeholder="Escribe tu mensaje aquí..." nolabel="1" widget="text"/>
                </group>
                
                <!-- Sección de mensajes existentes -->
                <group string="Historial de Mensajes">
                    <field name="message_ids" readonly="1" editable="false" nolabel="1">
                        <list create="false" edit="false" delete="false" open="false" no_open="1">
                            <field name="create_date" string="Fecha"/>
                            <field name="author_id" string="Autor"/>
                            <field name="body" string="Mensaje"/>
                        </list>
                    </field>
                </group>
                
                <footer>
                    <button string="Agregar Mensaje" type="object" name="action_add_message" 
                            class="btn btn-primary"
                            readonly="not new_message"/>
                    <button string="Cerrar" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
