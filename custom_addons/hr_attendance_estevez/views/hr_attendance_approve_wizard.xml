<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_attendance_approve_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.approve.wizard.form</field>
        <field name="model">hr.attendance.approve.wizard</field>
        <field name="arch" type="xml">
            <form string="Aprobar asistencia">
                <group>
                    <field name="observation" placeholder="Observación (opcional)"/>
                </group>
                <footer>
                    <button name="action_confirm_approve" string="Confirmar aprobación" type="object" class="btn btn-success"/>
                    <button string="Cancelar" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
