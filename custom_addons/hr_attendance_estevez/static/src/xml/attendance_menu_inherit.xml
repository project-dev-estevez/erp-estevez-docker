<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-inherit="hr_attendance.attendance_menu" t-inherit-mode="extension" priority="20">
        <xpath expr="//div[@id='reason_container']" position="before">
            <div style="margin-bottom: 10px; text-align: center; color: #007bff; font-weight: bold;">
                <t t-if="state.geofence_name">
                    <t t-esc="state.geofence_name"/>
                    <t t-if="state.geofence_description">
                        <br/>
                        <small>
                            <t t-esc="state.geofence_description"/>
                        </small>
                    </t>
                </t>
                <t t-elif="state.latitude and state.longitude">
                    Configurar Geocerca
                </t>
                <t t-else="">
                    Ubicaci√≥n no disponible
                </t>
            </div>
        </xpath>
    </t>
</templates>