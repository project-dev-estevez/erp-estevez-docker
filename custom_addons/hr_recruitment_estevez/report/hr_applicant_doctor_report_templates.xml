<odoo>
    <template id="report_hr_applicant_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="container">
                            <div class="row">
                                <div class="col text-center">
                                    <h1><strong>HISTORIA CLÍNICA GENERAL</strong></h1>
                                    <small>Código: DA-FE-HS-043</small><br/>
                                    <small>Revisión: 01</small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h2>Clinical History</h2>
                                    <p><strong>Patient Name:</strong> <t t-esc="doc.patient_name"/></p>
                                    <p><strong>Gender:</strong> <t t-esc="doc.gender"/></p>
                                    <p><strong>Birth Date:</strong> <t t-esc="doc.birth_date"/></p>
                                    <p><strong>Age:</strong> <t t-esc="doc.age"/></p>
                                    <p><strong>Job Position:</strong> <t t-esc="doc.job_position"/></p>
                                    <p><strong>Education:</strong> <t t-esc="doc.education"/></p>
                                    <p><strong>Address:</strong> <t t-esc="doc.address"/></p>
                                    <p><strong>Phone:</strong> <t t-esc="doc.phone"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>