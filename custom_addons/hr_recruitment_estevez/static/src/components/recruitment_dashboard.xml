<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="recruitment.dashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Dashboard Reclutamiento</h1>
                                    <div>
                                        <select class="form-select" t-model="state.period" t-on-change="onPeriodChange">
                                            <option value="0">Seleccionar Período</option>
                                            <option value="7">Últimos 7 días</option>
                                            <option value="30">Últimos 30 días</option>
                                            <option value="90">Últimos 90 días</option>
                                            <option value="365">Últimos 365 días</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- Vacantes cubiertas en un rango de tiempo -->
                        <KpiCard name="'Postulaciones'" 
                                 value="state.filledVacancies.value" 
                                 percentage="state.filledVacancies.percentage"/>

                        <KpiCard name="'Orders'" value="20" percentage="20"/>
                        <KpiCard name="'Revenues'" value="'30.50K'" percentage="-3"/>
                        <KpiCard name="'Average Order'" value="'2.5K'" percentage="-10"/>
                        <KpiCard name="'Average Order'" value="'2.5K'" percentage="-10"/>
                        <KpiCard name="'Average Order'" value="'2.5K'" percentage="-10"/>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Products</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'line'" title="'Top Products Report'"/>
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Sales People</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'pie'" title="'Top Sales People Report'"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
