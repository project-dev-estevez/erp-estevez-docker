<templates xml:space="preserve">
    <t t-name="hr_recruitment_estevez.RequisitionStatsChart" owl="1">
        <div class="requisition-stats-chart">

            <!-- ðŸ”„ LOADING SPINNER -->
            <div t-if="state.isLoading" class="d-flex justify-content-center align-items-center" style="height: 300px;">
                <div class="text-center">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="text-muted">Cargando estadÃ­sticas de requisiciones...</p>
                </div>
            </div>

            <!-- ðŸ“Š GRÃFICO CON DATOS -->
            <div t-if="!state.isLoading and state.hasData">
                <ChartRendererApex 
                    t-key="state.chartKey"
                    config="state.apexConfig"
                    height="props.height || 400"
                />
                
                <!-- ðŸ“ˆ RESUMEN NUMÃ‰RICO -->
                <div class="row mt-3 pt-3 border-top mx-2">
                    <div class="col text-center">
                        <div class="text-primary fw-bold fs-4"
                            t-esc="state.requisitionData.total || 0" />
                        <small class="text-muted d-block">Total</small>
                    </div>
                    <div class="col text-center">
                        <div class="text-warning fw-bold fs-4"
                            t-esc="state.requisitionData.countToApprove || 0" />
                        <small class="text-muted d-block">Por Aprobar</small>
                    </div>
                    <div class="col text-center">
                        <div class="text-warning fw-bold fs-4"
                            t-esc="state.requisitionData.countPorAbrir || 0" />
                        <small class="text-muted d-block">Por Abrir</small>
                    </div>
                    <div class="col text-center">
                        <div class="text-success fw-bold fs-4"
                            t-esc="state.requisitionData.countApprovedOpen || 0" />
                        <small class="text-muted d-block">Abiertas</small>
                    </div>
                    <div class="col text-center">
                        <div class="text-danger fw-bold fs-4"
                            t-esc="state.requisitionData.countApprovedClosed || 0" />
                        <small class="text-muted d-block">Cerradas</small>
                    </div>
                </div>
            </div>

            <!-- âš ï¸ SIN DATOS -->
            <div t-if="!state.isLoading and !state.hasData" class="text-center py-5">
                <div class="mb-4">
                    <i class="fa fa-file-text fa-4x text-muted opacity-50"></i>
                </div>
                <h5 class="text-muted mb-3">No hay requisiciones disponibles</h5>
                <p class="text-secondary">
                    No se encontraron requisiciones para el perÃ­odo seleccionado.
                </p>
                <button class="btn btn-outline-primary btn-sm" t-on-click="refresh">
                    <i class="fa fa-refresh me-1"></i>
                    Intentar nuevamente
                </button>
            </div>

            <!-- ðŸ’¡ AYUDA CONTEXTUAL -->
            <div t-if="!state.isLoading and state.hasData" class="mt-3">
                <div class="alert alert-info border-0 shadow-sm">
                    <div class="d-flex align-items-start">
                        <i class="fa fa-lightbulb me-3 mt-1 text-primary"></i>
                        <div>
                            <strong>ðŸ’¡ Tip:</strong>
                            Haz clic en cualquier barra para ver las requisiciones de ese estado.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>