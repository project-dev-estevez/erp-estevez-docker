<odoo>
    <record id="view_hr_applicant_form_inherit" model="ir.ui.view">
        <field name="name">hr.applicant.form.inherit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']/button[@name='action_create_meeting']" position="after">
                <button name="action_open_whatsapp" class="oe_stat_button" icon="fa-whatsapp" type="object" string="WhatsApp" invisible="not partner_phone"/>
                <button class="oe_stat_button" name="action_open_documents" type="object" icon="fa-file-text-o">
                    <field string="Documentos" name="documents_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_hr_applicant_documents_kanban" model="ir.ui.view">
        <field name="name">hr.applicant.documents.kanban</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <field name="name"/>
                <field name="datas"/> <!-- Campo que indica si hay un archivo adjunto -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><t t-esc="record.name.value"/></strong>
                                <!-- Badge para indicar si el archivo estÃ¡ adjunto -->
                                <div t-if="record.datas.value" class="oe_kanban_badge oe_kanban_badge_success">
                                    Archivo Adjunto
                                </div>
                                <div t-else="" class="oe_kanban_badge oe_kanban_badge_danger">
                                    Sin Archivo
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>