<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="hr_estevez.EmployeesDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted mb-5 pb-5">
            <div class="row m-3">
                <div class="col-lg-12">

                    <!-- Titulo y filtro -->
                    <DashboardHeader
                        title="'Dashboard de Empleados'"
                        startDate="state.startDate"
                        endDate="state.endDate"
                        onDateChange.bind="onDateChange"
                    />

                    <!-- KPIs principales -->
                    <div class="row">
                        <KpisGrid />
                    </div>

                    <!-- Gráficas principales -->
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <DepartmentDistributionChart height="350" />
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <EmployeeStatusChart height="398" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <JobDistributionChart height="350" />
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <ChartRendererApex config="chartsDummy[3].config" type="chartsDummy[3].type" />
                                <h6 class="mt-3 text-center text-muted">Cumpleaños Próximos</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
