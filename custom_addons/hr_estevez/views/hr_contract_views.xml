<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulario de contratos -->
    <record id="view_hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <!-- Add a new "Guardar" button in the header -->
            <xpath expr="//header" position="inside">

                <button type="object"
                        string="Guardar"
                        class="btn-primary"
                        icon="fa-save"
                        name="action_save"/>

                <button name="%(action_report_hr_contract_addendum)d"
                        type="action"
                        string="Addendum"
                        class="btn-primary"
                        icon="fa-file-pdf-o"/>

                <button name="%(action_report_hr_contract)d"
                        type="action"
                        string="Generar Contrato"
                        class="btn-primary"
                        icon="fa-file-pdf-o"/>

                <button type="object"
                        string="Cancelar Contrato"
                        class="btn-danger"
                        icon="fa-ban"
                        name="action_cancel_contract"
                        confirm="¿Está seguro de que desea cancelar el contrato actual?"
                        invisible="state == 'cancel'"/>

            </xpath>

            <!-- Columna de la izquierda -->
            <xpath expr="//group/group[@name='top_info_left']" position="replace">
                <group>
                    <field name="active" invisible="1"/>
                    <field name="company_id" options="{'no_create': True}"/>
                    <field name="employee_id" widget="many2one_avatar_employee" readonly="True" options="{'no_create': True}"/>
                    <field name="active_employee" invisible="1"/>
                    <!-- Fecha de ingreso a la empresa -->
                    <field name="date_of_entry"/>
                    <field name="date_start" string="Fecha Inicio de Contrato"/>
                    <field name="contract_duration" string="Duración del Contrato" 
               options="{'readonly': [('state', '=', 'open')]}"/>
                    <field name="date_end" string="Fecha Fin de Contrato"/>                   
                    <field name="days_to_expiry"/>
                    <field name="bank" invisible="1"/>
                    <field name="bank_account" invisible="1"/>
                    <field name="clabe" invisible="1"/>
                </group>
            </xpath>

            <!-- Columna de la derecha -->
            <xpath expr="//group/group[@name='top_info_right']" position="replace">
                <group>
                    <field name="work_location" readonly="1"/>
                    <field name="structure_type_id" groups="!hr_contract.group_hr_contract_manager" domain="['|', ('country_id', '=', False), ('country_id', '=', company_country_id)]" options="{'no_open': True, 'no_create': True}"/>
                    <field name="structure_type_id" groups="hr_contract.group_hr_contract_manager" domain="['|', ('country_id', '=', False), ('country_id', '=', company_country_id)]"/>
                    <field name="work_direction" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="department_id" groups="!hr_contract.group_hr_contract_manager" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="department_id" groups="hr_contract.group_hr_contract_manager" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="work_area" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="job_id" groups="!hr_contract.group_hr_contract_manager" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="job_id" groups="hr_contract.group_hr_contract_manager" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="contract_type_id" groups="!hr_contract.group_hr_contract_manager" options="{'no_open': True, 'no_create': True}"/>
                    <field name="contract_type_id" groups="hr_contract.group_hr_contract_manager"/>
                    <field name="hr_responsible_id" widget="many2one_avatar_user" invisible="1"/>
                </group>
            </xpath>

            <!-- Hide Salary Information page -->
            <xpath expr="//notebook/page[@name='information']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Nuevas páginas -->
            <xpath expr="//notebook/page[@name='other']" position="before">
                <page name="documents" string="Contrato">
                    <group>
                        <div class="card" style="width: 18rem; margin: 10px auto;">
                            <div class="card-body text-center">
                                <i class="fa fa-file-pdf-o fa-5x text-danger" invisible="not document_file" aria-hidden="true" title="Archivo PDF"></i>
                                <i class="fa fa-clock-o fa-2x text-warning" invisible="document_file" aria-hidden="true" title="Pendiente por adjuntar"></i>
                                <h5 class="card-title mt-3" invisible="not document_file">Contrato Adjunto</h5>
                                <h5 class="card-title mt-3" invisible="document_file">Pendiente por Adjuntar...</h5>
                                <i class="fa fa-check fa-2x text-success" invisible="not document_file" aria-hidden="true" title="Archivo adjuntado correctamente"></i>

                                <!-- Campo para adjuntar el archivo -->
                                <field name="document_file" filename="document_filename" widget="binary" string="Adjuntar Archivo" class="mt-2"/>
                            </div>
                        </div>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Listado de contratos -->
    <record id="view_hr_contract_list_inherit" model="ir.ui.view">
        <field name="name">hr.contract.tree.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
        <field name="arch" type="xml">
        <field name="employee_id" position="attributes">
            <attribute name="width">200</attribute>
        </field>
        <field name="name" position="attributes">
            <attribute name="width">200</attribute>
        </field>
        <field name="department_id" position="attributes">
            <attribute name="width">300</attribute>
        </field>
        <field name="job_id" position="attributes">
            <attribute name="width">200</attribute>
        </field>
        <field name="date_start" position="attributes">
            <attribute name="width">200</attribute>
        </field>                
        <field name="date_end" position="attributes">
            <attribute name="width">200</attribute>
        </field>
        <field name="contract_type_id" position="attributes">
            <attribute name="width">150</attribute>
        </field>
        <field name="wage" position="attributes">
            <attribute name="width">150</attribute>
        </field>
        <field name="resource_calendar_id" position="attributes">
            <attribute name="width">200</attribute>
        </field>
        <field name="structure_type_id" position="attributes">
            <attribute name="width">200</attribute>
        </field>
        <field name="company_id" position="attributes">
            <attribute name="width">200</attribute>
        </field>
            <xpath expr="//field[@name='date_start']" position="after">
                <field name="create_date" string="Fecha de Creación" optional="hide" width="200"/>
                <field name="days_to_expiry" string="Días Vencimiento" optional="hide" width="150"/>
                <field name="create_uid" string="Creado por" widget="many2one_avatar_user" optional="hide" width="200"/>
            </xpath>                                            
        </field>
    </record>

</odoo>