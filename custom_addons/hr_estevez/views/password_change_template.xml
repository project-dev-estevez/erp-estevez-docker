<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="password_change_required_template" name="Cambio de Contraseña Obligatorio">
        <t t-call="web.login_layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-primary text-white text-center py-4">
                                <h3 class="mb-0">
                                    <i class="fa fa-lock me-2"></i>
                                    Cambio de Contraseña Obligatorio
                                </h3>
                            </div>
                            <div class="card-body p-4">
                                <!-- Alerta de advertencia -->
                                <div class="alert alert-warning" role="alert">
                                    <i class="fa fa-exclamation-triangle me-2"></i>
                                    <strong>¡Atención!</strong> Por seguridad, debe cambiar su contraseña temporal antes de continuar.
                                </div>
                                
                                <!-- Mostrar errores si existen -->
                                <t t-if="error">
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fa fa-exclamation-circle me-2"></i>
                                        <t t-esc="error"/>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                </t>
                                
                                <!-- Info del usuario -->
                                <div class="mb-3">
                                    <p class="mb-2"><strong>Usuario:</strong> <span t-esc="user_login"/></p>
                                    <p class="mb-0"><strong>Nombre:</strong> <span t-esc="user_name"/></p>
                                </div>
                                
                                <hr/>
                                
                                <!-- Formulario simple POST -->
                                <form method="POST" action="/web/change_password_submit">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    
                                    <div class="mb-3">
                                        <label for="new_password" class="form-label">
                                            <i class="fa fa-key me-1"></i>
                                            Nueva Contraseña
                                        </label>
                                        <input type="password" 
                                               class="form-control form-control-lg" 
                                               id="new_password" 
                                               name="new_password"
                                               placeholder="Mínimo 8 caracteres"
                                               required="required"
                                               minlength="8"
                                               autofocus="autofocus"/>
                                        <small class="form-text text-muted">
                                            La contraseña debe tener al menos 8 caracteres
                                        </small>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label for="confirm_password" class="form-label">
                                            <i class="fa fa-check-circle me-1"></i>
                                            Confirmar Contraseña
                                        </label>
                                        <input type="password" 
                                               class="form-control form-control-lg" 
                                               id="confirm_password" 
                                               name="confirm_password"
                                               placeholder="Repita la contraseña"
                                               required="required"
                                               minlength="8"/>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fa fa-save me-2"></i>
                                            Cambiar Contraseña
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fa fa-shield-alt me-1"></i>
                                Sus datos están protegidos y seguros
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>