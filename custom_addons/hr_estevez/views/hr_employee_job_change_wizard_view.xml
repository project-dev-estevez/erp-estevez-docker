<odoo>
    <record id="view_hr_employee_job_change_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.job.change.wizard.form</field>
        <field name="model">hr.employee.job.change.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar cambio de puesto">
                <group>
                    <field name="employee_id"/>
                    <field name="old_job_id"/>
                    <field name="new_job_id"/>
                    <field name="start_date"/>
                </group>
                <footer>
                    <button name="action_confirm_change"
                            type="object"
                            class="btn-primary"
                            string="Confirmar"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_hr_employee_job_change_wizard" model="ir.actions.act_window">
        <field name="name">Cambiar Puesto</field>
        <field name="res_model">hr.employee.job.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_employee_job_change_wizard_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_type">action</field>
        <field name="context">{'default_employee_id': active_id}</field>
    </record>
</odoo>
