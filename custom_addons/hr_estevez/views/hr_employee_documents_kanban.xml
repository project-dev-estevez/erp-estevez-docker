<odoo>
    <record id="view_hr_employee_documents_kanban" model="ir.ui.view">
        <field name="name">hr.employee.document.kanban</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <field name="name"/>
                <field name="attached"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h3><t t-esc="record.name.value"/></h3>
                                <div t-if="record.attached.raw_value" class="text-success">
                                    Archivo Adjunto
                                </div>
                                <div t-else="" class="text-danger">
                                    Sin Adjuntar
                                </div>
                                <button class="oe_stat_button" name="action_attach_document" type="object" icon="fa-paperclip" string="Adjuntar"/>
                                <button t-if="record.attached.raw_value" 
                                        class="oe_stat_button" 
                                        name="action_view_document" 
                                        type="object" 
                                        icon="fa-eye" 
                                        string="Visualizar"/>
                                <button t-if="record.attached.raw_value" 
                                        class="oe_stat_button" 
                                        name="action_download_document" 
                                        type="object" 
                                        icon="fa-download" 
                                        string="Descargar"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
