<odoo>
    <record id="view_hr_employee_documents_kanban" model="ir.ui.view">
        <field name="name">hr.employee.document.kanban</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <field name="name"/>
                <field name="attached"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card">
                            <div class="o_kanban_card_content">
                                <h3><t t-esc="record.name.value"/></h3>
                                <div t-if="record.attached.raw_value" class="text-success">
                                    Archivo Adjunto
                                </div>
                                <div t-else="" class="text-danger">
                                    Sin Adjuntar
                                </div>
                                <div class="o_kanban_card_footer mt-2">
                                    <button class="btn btn-light border"
                                            type="object"
                                            name="action_attach_document"
                                            title="Adjuntar documento">
                                        <i class="fa fa-paperclip"></i> Adjuntar
                                    </button>
                                    <button t-if="record.attached.raw_value"
                                            class="btn btn-light border"
                                            type="object"
                                            name="action_view_document"
                                            title="Visualizar documento">
                                        <i class="fa fa-eye"></i> Ver
                                    </button>
                                    <button t-if="record.attached.raw_value"
                                            class="btn btn-light border"
                                            type="object"
                                            name="action_download_document"
                                            title="Descargar documento">
                                        <i class="fa fa-download"></i> Descargar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
