<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employees_kanban_inherit" model="ir.ui.view">
            <field name="name">hr.employee.kanban.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                
                <!-- Para el email - buscar el div que tiene el atributo t-if -->
                <xpath expr="//div[@t-if='record.work_email.raw_value']" position="replace">
                    <div t-if="record.work_email.raw_value or record.private_email.raw_value" class="o_text_overflow">
                        <i class="fa fa-fw me-2 fa-envelope text-primary" title="Email"/>
                        <t t-if="record.work_email.raw_value">
                            <field name="work_email"/>
                        </t>
                        <t t-elif="record.private_email.raw_value">
                            <field name="private_email"/>
                        </t>
                    </div>
                </xpath>
                
                <!-- Para el telÃ©fono - buscar el div que tiene el atributo t-if -->
                <xpath expr="//div[@t-if='record.work_phone.raw_value']" position="replace">
                    <div t-if="record.work_phone.raw_value or record.private_phone.raw_value" class="d-flex">
                        <div>
                            <i class="fa fa-fw me-2 fa-phone text-primary" title="Phone"/>
                            <t t-if="record.work_phone.raw_value">
                                <field name="work_phone"/>
                            </t>
                            <t t-elif="record.private_phone.raw_value">
                                <field name="private_phone"/>
                            </t>
                        </div>
                        <field name="user_id" widget="many2one_avatar_user" readonly="1" class="ms-auto"/>
                    </div>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>