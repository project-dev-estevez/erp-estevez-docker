<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista Form del modal -->
        <record id="hr_employee_job_history_form" model="ir.ui.view">
            <field name="name">hr.employee.job.history.form</field>
            <field name="model">hr.employee.job.history</field>
            <field name="arch" type="xml">
                <form string="Historial de puestos">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" readonly="1"/>
                                <field name="old_job_id" readonly="1"/>
                                <field name="changed_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="new_job_id" readonly="1"/>
                                <field name="change_date" readonly="1"/>
                            </group>
                        </group>                        

                    </sheet>
                    <footer>
                        <button string="Cerrar" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
