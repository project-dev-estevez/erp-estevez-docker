<odoo>

    <!-- Reporte general (velocidad) -->
    <record id="action_report_memorandum_velocidad" model="ir.actions.report">
        <field name="name">Acta - Velocidad</field>
        <field name="model">hr.memorandum</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_estevez.report_memorandum_velocidad</field>
        <field name="print_report_name">'Acta Velocidad - %s' % (object.employee_id.name)</field>
