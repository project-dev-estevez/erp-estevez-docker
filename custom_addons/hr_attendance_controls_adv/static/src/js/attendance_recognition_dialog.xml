<?xml version="1.0" encoding="UTF-8"?>
<template>

    <t t-name="attendance_face_recognition.AttendanceRecognitionDialog" id="AttendanceRecognitionDialog">
        <Dialog size="'lg'"  fullscreen="true" title="'Reconocimiento Facial'">
            <t t-set-slot="header">
                <div class="d-flex w-100">
                    <h4>Reconocimiento Facial</h4>
                    <div t-on-click="props.close" type="button" class="btn-close"/>
                </div>
            </t>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 controls">
                        <fieldset class="reader-config-group">
                            <div class="row">
                                <div class="col-4">
                                    <label>
                                        <span>Seleccionar CÃ¡mara</span>
                                    </label>
                                </div>
                                <div class="col-8">
                                    <select name="video_source" class="videoSource form-control" id="videoSource" t-ref="select">                                       
                                    </select>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt8 d-flex flex-column" id="videoContainer" t-ref="videoContainer" style="flex: 1 1 auto; min-height: 0; position: relative;">
                        <div style="flex: 1 1 auto; position: relative; min-height: 200px;">
                            <video id="video" style="width: 100%; height: 100%; max-width: 100%; max-height: 100%; box-sizing: border-box; background: #222; object-fit: contain;" muted="true" autoplay="false" playsinline="true" t-ref="video"/>  
                            <canvas id="canvas" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; max-width: 100%; max-height: 100%; display: block;" t-ref="canvas"/>
                            <canvas id="image" style="display: none;" t-ref="image"/>  
                        </div>
                    </div>
                </div>
            </div>
             <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="props.close">Cancelar</button>
            </t>
        </Dialog>
    </t>

</template>
