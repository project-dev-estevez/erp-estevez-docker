<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_occupation_tree" model="ir.ui.view">
        <field name="name">hr.occupation.list</field>
        <field name="model">hr.occupation</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_hr_occupation_form" model="ir.ui.view">
        <field name="name">hr.occupation.form</field>
        <field name="model">hr.occupation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>