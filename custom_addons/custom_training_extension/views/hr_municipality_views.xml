<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_hr_municipality_tree" model="ir.ui.view">
        <field name="name">hr.municipality.list</field>
        <field name="model">hr.municipality</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>                                
                <field name="name"/>
                <field name="state_id"/>                
            </list>
        </field>
    </record>

    <record id="view_hr_municipality_form" model="ir.ui.view">
        <field name="name">hr.municipality.form</field>
        <field name="model">hr.municipality</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>     
                        <field name="state_id" placeholder="Selecciona un Estado..."/>                   
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<record id="action_municipality" model="ir.actions.act_window">
    <field name="name">Informaci√≥n</field>
    <field name="res_model">hr.municipality</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_hr_municipality_tree"/>
</record>
</odoo>