<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_instructores" model="ir.actions.act_window">
        <field name="name">Informaci√≥n</field>
        <field name="res_model">hr.instructores</field>
        <field name="view_mode">list</field>
    </record>
    
    <record id="view_hr_instructores_list" model="ir.ui.view">
        <field name="name">hr.instructores.list</field>
        <field name="model">hr.instructores</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="tipo"/>
            </list>
        </field>
    </record>

    <record id="view_hr_instructores_form" model="ir.ui.view">
        <field name="name">hr.instructores.form</field>
        <field name="model">hr.instructores</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tipo"/>
                    </group>
                     <button type="object"
                        string="Guardar"
                        class="btn-primary"
                        icon="fa-save"
                        name="action_save"/>
                </sheet>
            </form>
        </field>
    </record>

   


</odoo>