<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_calendar_event_form_inherit_meet" model="ir.ui.view">
    <field name="name">calendar.event.form.inherit.meet</field>
    <field name="model">calendar.event</field>
    <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
    <field name="arch" type="xml">
      <!-- 1) Checkbox antes de la ubicación normal -->
      <xpath expr="//field[@name='location']" position="before">
        <field name="is_google_meet"/>
      </xpath>

      <!-- 2) Botón “Generar Meet ahora” y luego el campo URL -->
      <xpath expr="//field[@name='location']" position="after">
        <!--
          modifiers:
            invisible: ocultar cuando show_meet_button == False
        -->
        <button
          name="action_force_create_meet"
          string="Generar Meet ahora"
          type="object"
          class="btn btn-primary"
          modifiers="{
            'invisible': [
              ['show_meet_button', '=', False]
            ]
          }"
        />
        <!--
          modifiers:
            invisible: ocultar cuando videocall_location IS FALSE/empty
        -->
        <field
          name="videocall_location"
          widget="url"
          string="Enlace Meet"
          readonly="1"
          modifiers="{
            'invisible': [
              ['videocall_location', '=', False]
            ]
          }"
        />
      </xpath>
    </field>
  </record>
</odoo>